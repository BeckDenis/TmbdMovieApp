<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/secondaryText</item>
        <item name="chipBackgroundColor">@color/chip_bg_state_list</item>
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="textStartPadding">19dp</item>
        <item name="textEndPadding">19dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">7dp</item>
    </style>

    <style name="smallestText">
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="smallerText">
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="smallText">
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="MediumText">
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="large_text">
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">26sp</item>
    </style>

</resources>