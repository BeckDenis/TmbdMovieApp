<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/rating_card"
    android:layout_width="0dp"
    android:layout_height="88dp"
    app:cardCornerRadius="44dp"
    app:cardElevation="30dp"
    app:layout_constraintBottom_toBottomOf="@id/detail_poster"
    app:layout_constraintStart_toEndOf="@id/detail_poster"
    app:layout_constraintTop_toBottomOf="@id/detail_poster"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="44dp"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/star" />

            <TextView
                android:id="@+id/rating_card_vote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textAppearance="@style/smallerText"
                android:textColor="@color/primaryText"
                tools:text="8.2/10" />

            <TextView
                android:id="@+id/rating_card_vote_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textAppearance="@style/smallestText"
                android:textColor="@color/grayText"
                tools:text="15865" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/rating_card_like_image"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:scaleType="centerCrop"
                android:src="@drawable/star_border" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/like_it"
                android:textAppearance="@style/smallerText"
                android:textColor="@color/primaryText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textAppearance="@style/smallestText"
                android:textColor="@color/grayText"
                tools:text=" " />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:background="@color/metascore"
                android:gravity="center"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:text="Soon"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/metascore"
                android:textAppearance="@style/smallerText"
                android:textColor="@color/primaryText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Critic reviews"
                android:textAppearance="@style/smallestText"
                android:textColor="@color/grayText" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>